doctype html
html
  head
    link(rel="stylesheet",type="text/css",href="assets/ldcv.min.css")
    link(rel="stylesheet",type="text/css",href="assets/loading-btn.css")
    link(rel="stylesheet",type="text/css",href="assets/loading.css")
    link(rel="stylesheet",type="text/css",href="ldld.css")
    link(rel="stylesheet",type="text/css",href="index.css")
    script(src="assets/ldcv.min.js")
    script(src="ldld.js")
  body
    h2 ldLoader Demonstration
    .btn(onclick="show('full')") toggle full
    .btn(onclick="show('default')") toggle default
    .btn(onclick="show('btn')") toggle btn
    .btn(onclick="show('ctrl')") toggle ctrl
    .btn(onclick="show('all')") toggle multiple
    hr

    .test.ldld.full
    .test.btn.ld-ext-right
      span Load
      .ld.ld-ball.ld-bounce
    .btn
      span Hi
      .test.ctrl
    .btn.btn-test
      .test.ldld.default
    .all.ld-ext-right All 1 #[.ld.ld-ring.ld-spin]
    .all.ld-ext-left All 2 #[.ld.ld-ring.ld-spin]
    .all.ld-ext-top All 3 #[.ld.ld-ring.ld-spin]

    script(src="index.js")
