.ldld
  visibility: hidden
  opacity: 0
  transition: all 0.3s ease-in-out

.ldld.running
  visibility: visible
  opacity: 1

.ldld.default, .ldld.full
  &:before
    content: " "
    display: block
    width: 100%
    height: 100%
    background: rgba(0,0,0,.5)
    animation: ldld-default 0.5s ease-in-out infinite

@keyframes ldld-default
  0%
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)

.ldld.default
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%,-50%)
  width: 32px
  height: 32px

.ldld.full
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  width: 100%
  height: 100%
  background: rgba(0,0,0,.5)
  &:before
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    margin: auto
    width: 48px
    height: 48px
    background: rgba(255,255,255,.5)
