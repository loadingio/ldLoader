.ldld
  visibility: hidden
  opacity: 0
  transition: all 0.3s ease-in-out

.ldld.running
  visibility: visible
  opacity: 1

.ldld
  color: rgba(0,0,0,.5)

.ldld.default, .ldld.full, .ldld.ldbtn
  &:before
    content: " "
    display: block
    background: none
    animation: ldld-default 0.5s ease-in-out infinite
    border-radius: 50%
    width: 100%
    height: 100%
    margin: 0
    box-sizing: border-box
    border: 2px solid #fff
    border-color: currentColor transparent currentColor transparent


@keyframes ldld-default
  0%
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)

/* default loader. auto centered */
.ldld.default
  position: absolute
  top: 50%
  left: 50%
  transform: translate(-50%,-50%)
  width: 32px
  height: 32px

.ldld.default.sm, .ldld.ldbtn.sm
  width: 16px
  height: 16px

/* default loader, for using with ldbtn */
.ldld.ldbtn
  width: 32px
  height: 32px

/* for using with full screen loader */
.ldld.full
  position: fixed
  top: 0
  left: 0
  right: 0
  bottom: 0
  width: 100%
  height: 100%
  background: rgba(0,0,0,.5)
  &:before
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    margin: auto
    width: 48px
    height: 48px
